{
	"[markdown][yaml]": {
		"editor.insertSpaces": true,
		"editor.tabSize": 2
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"editor.insertSpaces": false,
	"editor.rulers": [100],
	"files.eol": "\n",
	"files.associations": {
		"*.json": "jsonc",
		"package.json": "json"
	}
}
